{
  "include": ["src/index.ts"],
  "compilerOptions": {
    "strict": true,
    "lib": ["es2017"],
    "outDir": "dist/", 
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true, 
    "importHelpers": false, 
    "noEmitHelpers": false, 
    "noEmitOnError": true,
    "pretty": true,
    "removeComments": false,
    "sourceMap": false,
    "stripInternal": true
  }
}
